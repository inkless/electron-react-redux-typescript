{
  "name": "electron-react-redux-typescript",
  "version": "0.1.0",
  "description": "A electron react redux typescript boilerplate",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:dll": "cross-env NODE_ENV=development webpack --config webpack.renderer.dev.dll.js",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "dev": "cross-env START_HOT=1 npm run start:renderer:dev",
    "dist": "npm run build && electron-builder",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "npm run build:dll && electron-builder install-app-deps",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "pretest:e2e": "npm run build",
    "start": "cross-env NODE_ENV=production electron .",
    "start:main:dev": "webpack --config webpack.main.config.js && electron .",
    "start:renderer:dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "test": "jest '(\\/test\\/(?!e2e/)).*'",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "test:watch": "npm test -- --watch"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "ProductName",
    "appId": "org.your.productname",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:inkless/electron-react-redux-typescript.git"
  },
  "author": {
    "name": "Your name",
    "email": "Your email"
  },
  "license": "SEE LICENSE",
  "bugs": {
    "url": "https://github.com/inkless/electron-react-redux-typescript/issues"
  },
  "homepage": "https://github.com/inkless/electron-react-redux-typescript",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.3",
    "@types/jest": "^23.0.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^6.0.1",
    "@types/react-test-renderer": "^16.0.1",
    "@types/webdriverio": "^4.10.2",
    "@types/webpack-env": "^1.13.6",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-devtools-installer": "^2.2.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.3.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "node-sass": "^4.9.0",
    "prettier": "^1.13.4",
    "react-hot-loader": "^4.2.0",
    "react-test-renderer": "^16.4.0",
    "redux-devtools-extension": "^2.13.2",
    "sass-loader": "^7.0.2",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  }
}
