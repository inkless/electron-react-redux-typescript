{
  "name": "electron-react-redux-typescript",
  "version": "0.1.0",
  "description": "A electron react redux typescript boilerplate",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:dll": "cross-env NODE_ENV=development webpack --config webpack.renderer.dev.dll.js",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build-storybook": "build-storybook",
    "dev": "cross-env START_HOT=1 npm run start:renderer:dev",
    "dist": "npm run build && electron-builder",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "npm run build:dll && electron-builder install-app-deps",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "pretest:e2e": "npm run build",
    "start": "cross-env NODE_ENV=production electron .",
    "start:main:dev": "webpack --config webpack.main.config.js && electron .",
    "start:renderer:dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "storybook": "start-storybook -p 6006",
    "test": "jest '(\\/test\\/(?!e2e/)).*'",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "test:watch": "npm test -- --watch"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "ProductName",
    "appId": "org.your.productname",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:inkless/electron-react-redux-typescript.git"
  },
  "author": {
    "name": "Your name",
    "email": "Your email"
  },
  "license": "SEE LICENSE",
  "bugs": {
    "url": "https://github.com/inkless/electron-react-redux-typescript/issues"
  },
  "homepage": "https://github.com/inkless/electron-react-redux-typescript",
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.16",
    "@storybook/addon-info": "^4.0.0-alpha.16",
    "@storybook/addon-links": "^4.0.0-alpha.16",
    "@storybook/addons": "^4.0.0-alpha.16",
    "@storybook/react": "^4.0.0-alpha.16",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/react-test-renderer": "^16.0.2",
    "@types/redux-thunk": "^2.1.0",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-info": "^3.4.1",
    "@types/storybook__react": "^3.0.9",
    "@types/webdriverio": "^4.10.3",
    "@types/webpack-env": "^1.13.6",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.27.1",
    "electron-devtools-installer": "^2.2.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.3.1",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-hot-loader": "^4.3.4",
    "react-test-renderer": "^16.4.2",
    "redux-devtools-extension": "^2.13.5",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.22.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "connected-react-router": "^4.3.0",
    "history": "^4.7.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "styled-components": "^3.4.2",
    "typesafe-actions": "^2.0.4"
  }
}
